<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Activity2"
    tools:context=".MainActivity4">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What is the color of our national flag?"
        android:textSize="40dp"
        android:textColor="@android:color/black"
        android:layout_marginTop="130dp"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black and White"
            android:textSize="30dp"
            android:textColor="@android:color/black"
            android:layout_marginTop="240dp"
            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Black and Green"
            android:textSize="30dp"
            android:textColor="@android:color/black"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Green and Red"
            android:textSize="30dp"
            android:textColor="@android:color/black"

            />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Red and Black"
            android:textSize="30dp"
            android:textColor="@android:color/black"
            />
        <Button
            android:id="@+id/confirm1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Confirm"
            android:textColor="@android:color/black"
            android:textSize="40dp"
            android:layout_marginLeft="70dp"/>
    </RadioGroup>

</RelativeLayout>